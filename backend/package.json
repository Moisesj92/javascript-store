{
  "name": "javascript-store-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for JavaScript Store - E-commerce platform built with Express, TypeScript and PostgreSQL",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec \"node --import tsx src/index.ts\"",
    "test": "NODE_OPTIONS=\"--import tsx --experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--import tsx --experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--import tsx --experimental-vm-modules\" jest --coverage"
  },
  "author": "ajimenez",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/pg": "^8.15.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
